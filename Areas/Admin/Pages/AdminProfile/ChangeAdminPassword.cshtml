@page
@model Coach.Areas.Admin.Pages.AdminProfile.ChangeAdminPasswordModel
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                             @sharedResource["Change Password"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br />
                        <form id="form" method="post">
                            @(Html.DevExtreme().Form<Coach.Entities.ChangePasswordModel>()
        .FormData(Model.resetPasswordModel)
        .Items(items =>
        {


                                    items.AddSimpleFor(m => m.CurrentPassword).IsRequired(true).Editor(e => e.TextBox().Mode(TextBoxMode.Password)).Label(k => k.Text(sharedResource["Current Password"]));
                                    items.AddSimpleFor(m => m.NewPassword).IsRequired(true).Label(k => k.Text(sharedResource["New Password"])).Editor(e => e.TextBox().Mode(TextBoxMode.Password));
                                    items.AddSimpleFor(m => m.ConfirmPassword).IsRequired(true).Label(k => k.Text(sharedResource["Confirm Password"])).Editor(e => e.TextBox().Mode(TextBoxMode.Password));

            items.AddButton()
                        .ColSpan(3)
                        .HorizontalAlignment(HorizontalAlignment.Right)
                        .ButtonOptions(b => b.Text(sharedResource["Save"])
                        .Type(ButtonType.Success)
                        .UseSubmitBehavior(true)).CssClass("invers");
        })
)
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
